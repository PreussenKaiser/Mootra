<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Mootra"
             x:Class="Mootra.AddEmotionPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#00e5ff</Color>
            <Color x:Key="SecondaryColor">#00cee5</Color>
            <Color x:Key="TextColor">Black</Color>
            <Color x:Key="TextColorDark">White</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <StackLayout Padding="30,10,30,10">
            <Label Text="Right now I feel..." TextColor="{DynamicResource TextColor}" FontSize="32"/>
            <Picker ItemsSource="{Binding EmotionTypes}" SelectedItem="{Binding Text, Mode=TwoWay}" Title="Select..."/>
            <Label Text="Or add a new one..." TextColor="{DynamicResource TextColor}" FontSize="24"/>
            <Entry Text="{Binding Text}" FontSize="Medium" />
            <Button Grid.Column="2" Command="{Binding SubmitMood}" Text="Submit" BackgroundColor="{DynamicResource SecondaryColor}" CornerRadius="16"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
