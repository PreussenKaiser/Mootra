<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Mootra"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="Mootra.AddEmotionPage"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <viewmodels:AddEmotionViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#00e5ff</Color>
            <Color x:Key="SecondaryColor">#00cee5</Color>
            <Color x:Key="TextColor">Black</Color>
            <Color x:Key="TextColorDark">White</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior EventName="Appearing" Command="{Binding OnRefresh}"/>
    </ContentPage.Behaviors>
       

    <StackLayout>
        <StackLayout Padding="30,10,30,10">
            <Label Text="Right now I feel..." TextColor="{DynamicResource TextColor}" FontSize="32"/>
            <Picker ItemsSource="{Binding EmotionNames}" SelectedItem="{Binding Text}" Title="Select..."/>
            <Label Text="Or add a new one..." TextColor="{DynamicResource TextColor}" FontSize="24"/>
            <Entry Text="{Binding Text}" FontSize="Medium" />
            <Button Grid.Column="2" Command="{Binding OnSubmit}" Text="Submit" BackgroundColor="{DynamicResource SecondaryColor}" CornerRadius="16"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
