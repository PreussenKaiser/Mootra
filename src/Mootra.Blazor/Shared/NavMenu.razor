@namespace Mootra.Blazor.Shared

<div class="top-row ps-3 navbar navbar-dark">
	<div class="container-fluid">
		<a class="navbar-brand" href="">Mootra</a>
		<button title="Navigation menu" class="navbar-toggler" @onclick="this.ToggleNavMenu">
			<span class="navbar-toggler-icon"></span>
		</button>
	</div>
</div>

<div class="@this.NavMenuCssClass" @onclick="this.ToggleNavMenu">
	<nav class="flex-column">
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="" Match="NavLinkMatch.All">
				<span class="oi oi-home" aria-hidden="true"></span> Add
			</NavLink>
		</div>
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="browseEmotions">
				<span class="oi oi-plus" aria-hidden="true"></span> Browse
			</NavLink>
		</div>
		<div class="nav-item px-3">
			<NavLink class="nav-link" href="profile">
				<span class="oi oi-list-rich" aria-hidden="true"></span> Profile
			</NavLink>
		</div>
	</nav>
</div>

@code
{
	/// <summary>
	/// Whether to collapse navigation or not.
	/// </summary>
	private bool collapseNavMenu = true;

	/// <summary>
	/// Gets the CSS class to apply to navigation.
	/// </summary>
	private string NavMenuCssClass
		=> this.collapseNavMenu ? "collapse" : null;

	/// <summary>
	/// Toggles navigation between collapsed and expanded.
	/// </summary>
	private void ToggleNavMenu()
		=> this.collapseNavMenu = !this.collapseNavMenu;
}
